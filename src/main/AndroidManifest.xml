<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.destinybb.mobilegame">

    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ChooseType"
            android:label="Typechoose"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".GamePlay"
            android:label="GamePlay"
            android:theme="@style/AppTheme"></activity>
        <activity
            android:name=".About"
            android:label="About"
            android:theme="@android:style/Theme.Dialog"></activity>
        <activity
            android:name=".ImageGallery"
            android:label="BubbleHit Gallery"
            android:theme="@android:style/Theme.Dialog"></activity>
        <activity
            android:name=".Prefs"
            android:label="Settings"></activity>
        <activity
            android:name=".Bluetooth"
            android:label="@string/title_activity_bluetooth"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DeviceListActivity"
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/select_device"
            android:theme="@android:style/Theme.Holo.Dialog" />
        <activity
            android:name=".GameOver"
            android:label="@string/title_activity_game_over"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GameMode"
            android:label="@string/title_activity_game_mode"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
